<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/AppTheme"
    android:padding="4dp"
    tools:context=".CompanyRowActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_margin="4dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="shahd"
                android:textColor="?attr/primary_text"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textView_companyLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="student"
                android:textColor="?attr/primary_text"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="@+id/textView_companyName"
                app:layout_constraintTop_toBottomOf="@+id/textView_companyName" />

            <TextView
                android:id="@+id/textView_companyPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="0949750516"
                android:textColor="?attr/primary_text"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_companyLocation"
                app:layout_constraintTop_toBottomOf="@+id/textView_companyName"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView_companyEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="shahd.alasfer@gmail.com"
                android:textColor="?attr/primary_text"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/textView_companyPhoneNumber"
                app:layout_constraintTop_toBottomOf="@+id/textView_companyName" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>